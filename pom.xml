<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- the basics -->
  <groupId>ch.emf.info</groupId>
  <artifactId>playdao</artifactId>
  <version>1.0.1</version>
  <packaging>jar</packaging>

  <!-- application, project and maven properties -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>

    <!--<play2.version>2.6.20</play2.version>-->
    <scala.version>2.12.4</scala.version>
  </properties>

  <!-- dependencies -->
  <dependencies>

    <!-- dependencies for compile (and run) -->
    <dependency>
      <groupId>ch.emf.info</groupId>
      <artifactId>daolayer</artifactId>
      <version>6.0.0</version>
    </dependency>

    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>${scala.version}</version>
    </dependency>

    <!--    <dependency>
      <groupId>com.typesafe.play</groupId>
      <artifactId>play_2.12</artifactId>
      <version>${play2.version}</version>
    </dependency>-->

    <dependency>
      <groupId>com.typesafe.play</groupId>
      <artifactId>play-java-jpa_2.12</artifactId>
      <version>2.6.20</version>
    </dependency>

    <!-- dependencies for tests -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <!-- MAVEN plugins ici https://maven.apache.org/plugins/ -->
  <!-- build settings -->
  <build>
    <plugins>

      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version> <!-- ok 24.10.2018 -->
      </plugin>

      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.1</version> <!-- avant 24.10.2018 version 2.9 -->
      </plugin>

      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version> <!-- ok 24.10.2018 -->
      </plugin>

      <plugin>
        <groupId>net.ju-n.maven.plugins</groupId>
        <artifactId>checksum-maven-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <goals>
              <goal>files</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <fileSets>
            <fileSet>
              <directory>target</directory>
              <includes>
                <include>*.pom</include>
                <include>*.jar</include>
              </includes>
            </fileSet>
          </fileSets>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.7.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.9</version> <!-- avant 24.10.2018 version 2.9 -->
        <configuration>
          <dependencyLocationsEnabled>false</dependencyLocationsEnabled>
        </configuration>
      </plugin>

      <!-- contrôlé 24.10.2018 -->
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.1</version> <!-- avant 24.10.2018 version 3.0.0-M1 -->
      </plugin>

    </plugins>
  </reporting>


  <!-- more project information -->
  <name>PlayDao</name>
  <description>A small layer to use Play framework with DaoLayer 6 and Guice</description>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://www.opensource.org/licenses/MIT</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <url>https://github.com/emfinfo/basiclib</url>
  <developers>
    <developer>
      <id>STT</id>
      <name>Jean-Claude Stritt</name>
      <email>strittjc@edufr.ch</email>
      <url>http://jcstritt.emf-informatique.ch/</url>
      <organization>EMF</organization>
      <organizationUrl>http://www.emf.ch</organizationUrl>
      <roles>
        <role>engineer</role>
        <role>developer</role>
      </roles>
      <timezone>Europe/Switzerland</timezone>
      <properties>
        <picUrl>http://jcstritt.emf-informatique.ch/pic/jcs01-square.jpg</picUrl>
      </properties>
    </developer>
  </developers>

</project>